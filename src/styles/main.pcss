:root {
    --text-color: #1e1e1e;
    --primary-color: #efefef;
    --accent-color: #3369f3;
    --on-accent-color: #ffffff;
    --secondary-color: #999999;
    --error-color: #ff2f2f;
    --surface-color: #fbfbfb;
    --tertiary-color: #ff0000;
}

* {
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    font-weight: 500;
    line-height: 13px;
    font-size: 13px;
    margin: 0;
    padding: 0;
    color: var(--text-color);
}

input {
    border: none;
    padding: 0;
    &:focus {
        outline: none;
    }
    &:disabled {
        background-color: unset;
    }
}

h1,
h2,
h3 {
    text-align: center;
    margin: 0;
}

h1 {
    font-size: 40px;
    line-height: 40px;
}

h2 {
    font-size: 20px;
    line-height: 20px;
}

h3 {
    font-size: 16px;
    font-weight: 600;
    line-height: 16px;
}

button {
    border: none;
    cursor: pointer;
}

ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    box-shadow: inset 0 0 2px var(--primary-color);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb {
    background: var(--primary-color);
    border-radius: 2px;
}
