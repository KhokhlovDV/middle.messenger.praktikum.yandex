.sign-layout {
    padding: 50px 30px 30px 30px;
    display: flex;
    flex-direction: column;
}

.sign-layout__header {
    margin-bottom: 40px;
}

.sign-layout__form {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    flex: 1;
}

.sign-layout__button {
    margin-bottom: 14px;
}

.sign-layout__link {
    display: block;
    width: fit-content;
    margin: 0 auto;
}
