.form-field {
    margin-bottom: 16px;
}

.form-field__label {
    font-size: 9px;
    line-height: 9px;
    display: block;
    color: var(--secondary-color);
    margin-bottom: 8px;
}

.form-field__input {
    display: block;
    width: 100%;
    padding-bottom: 6px;
    border-bottom: 1px solid var(--accent-color);
}
