.chat-message-box {
    padding-top: 10px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.chat-message-box__attach {
    padding: 0;
    background-color: unset;
}

.chat-message-box__message-form {
    flex: 1;
    display: flex;
    align-items: center;
}

.chat-message-box__message {
    background: var(--primary-color);
    border-radius: 30px;
    padding: 10px 20px;
    margin-right: 10px;
    color: var(--secondary-color);
    flex: 1;
}
