.chat-feed-item {
    border-top: 1px solid var(--primary-color);
    cursor: pointer;
    display: flex;
    gap: 12px;
    margin-right: 8px;
    padding-top: 12px;
}

.chat-feed-item__avatar {
    flex-shrink: 0;
}

.chat-feed-item__text-container {
    flex: 1;
}

.chat-feed-item__user-name {
    font-weight: 600;
    margin-bottom: 4px;
}

.chat-feed-item__message-container {
    -webkit-box-orient: vertical;
    color: var(--secondary-color);
    display: -webkit-box;
    font-size: 12px;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    line-height: 15px;
    overflow: hidden;
    text-overflow: ellipsis;
}

.chat-feed-item__my-message {
    color: var(--text-color);
}

.chat-feed-item__info-container {
    align-items: center;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
    justify-content: space-between;
}

.chat-feed-item__time {
    color: var(--secondary-color);
    font-size: 9px;
    font-weight: 500;
}

.chat-feed-item__badge {
    align-items: center;
    background-color: var(--accent-color);
    border-radius: 50%;
    color: var(--on-accent-color);
    display: inline-flex;
    font-size: 11px;
    height: 20px;
    justify-content: center;
    line-height: 12px;
    width: 20px;
}
