.avatar {
    background: var(--primary-color);
    border-radius: 50%;
    object-fit: cover;
    vertical-align: middle;
    cursor: pointer;
}

.avatar__image {
    border-radius: 50%;
    height: 100%;
    object-fit: cover;
    width: 100%;
}

.avatar__input {
    display: none;
}

.avatar-sm {
    height: 34px;
    width: 34px;
}

.avatar-m {
    height: 47px;
    width: 47px;
}
