{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "npm run build && node server.cjs",
    "lint:all": "npm run lint && npm run lint:style",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:style": "stylelint \"**/*.pcss\"",
    "lint:style:fix": "stylelint \"**/*.pcss\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:adsal"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "husky": "^9.1.7",
    "postcss": "^8.4.49",
    "postcss-preset-env": "^10.1.1",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "express": "^4.21.1",
    "handlebars": "^4.7.8"
  }
}
